  client.unfocused        $color02 $color02   $color03 $color15
  client.urgent           $color08 $color08   $color08 $color15


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
    i3bar_command i3bar -t
    #status_command i3status
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    font pango: Source Sans Pro Sans, FontAwesome 14
    position top
    strip_workspace_numbers yes
    colors {
        separator $color03
        background $color01
        statusline $color07
#                          border   background text
        focused_workspace  $color01 $color01   $color07
        active_workspace   $color01 $color02   $color04
        inactive_workspace $color01 $color01   $color04
        urgent_workspace   $color01 $color01   $color15
    }
}


